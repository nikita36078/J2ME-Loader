        <layer-list>
            <item>
                <shape>
                    <solid android:color="?attr/editTextLineColorFocused"/>
                </shape>
            </item>
            <item android:bottom="1.6dp">
                <shape>
                    <solid android:color="?attr/configCardBgColor"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="?attr/editTextLineColorNormal"/>
                </shape>
            </item>
            <item android:bottom="1.6dp">
                <shape>
                    <solid android:color="?attr/configCardBgColor"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>