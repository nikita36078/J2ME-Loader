<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_color_primary_dark</item>
        <item name="colorAccent">@color/dark_color_accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:colorBackground">@color/dark_color_background</item>
        <item name="android:windowBackground">@color/dark_color_background</item>
        <item name="colorBackgroundFloating">@color/dark_color_background</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/black</item>
        <item name="android:listDivider">@color/dark_list_divider</item>
        <item name="colorButtonNormal">@color/dark_color_btn_bg_normal</item>
        <item name="colorControlNormal">@color/dark_color_control_normal</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <!--custom theme attrs-->
        <item name="configCardBgColor">@color/dark_color_config_card</item>
        <item name="textColorPrimary">@color/dark_color_text_primary</item>
        <item name="textColorSecondary">@color/dark_color_text_secondary</item>
        <item name="textColorTertiary">@color/dark_color_text_tertiary</item>
        <item name="buttonTextColor">@color/dark_color_btn_text</item>
        <item name="buttonBgColorNormal">@color/dark_color_btn_bg_normal</item>
        <item name="buttonBgColorPressed">@color/dark_color_btn_bg_pressed</item>
    </style>

    <style name="AppTheme.Light" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary_dark</item>
        <item name="colorAccent">@color/light_color_accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:colorBackground">@color/light_color_background</item>
        <item name="android:windowBackground">@color/light_color_background</item>
        <item name="colorButtonNormal">@color/light_color_btn_bg_normal</item>
        <item name="colorControlNormal">@color/light_color_control_normal</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

        <!--custom theme attrs-->
        <item name="configCardBgColor">@color/light_color_config_card</item>
        <item name="textColorPrimary">@color/light_color_text_primary</item>
        <item name="textColorSecondary">@color/light_color_text_secondary</item>
        <item name="textColorTertiary">@color/light_color_text_tertiary</item>
        <item name="buttonTextColor">@color/light_color_btn_text</item>
        <item name="buttonBgColorNormal">@color/light_color_btn_bg_normal</item>
        <item name="buttonBgColorPressed">@color/light_color_btn_bg_pressed</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_color_primary_dark</item>
        <item name="actionOverflowMenuStyle">@style/AppTheme.OverflowMenu</item>
    </style>

    <style name="AppTheme.OverflowMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.Light.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary_dark</item>
        <item name="actionOverflowMenuStyle">@style/AppTheme.Light.OverflowMenu</item>
    </style>

    <style name="AppTheme.Light.OverflowMenu" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="FilePickerTheme" parent="NNF_BaseTheme">
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryDark">@color/dark_color_primary_dark</item>
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:colorBackground">@color/dark_color_background</item>
        <item name="android:windowBackground">@color/dark_color_background</item>
        <item name="colorBackgroundFloating">@color/dark_color_background</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/black</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/file_picker_accent</item>
    </style>

    <style name="FilePickerTheme.Light" parent="NNF_BaseTheme.Light">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary_dark</item>
        <item name="colorAccent">@color/file_picker_accent</item>
        <item name="android:colorBackground">@color/light_color_background</item>
        <item name="android:windowBackground">@color/light_color_background</item>
        <item name="nnf_toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme.Light</item>
    </style>

    <style name="FilePickerAlertDialogTheme.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/file_picker_accent</item>
    </style>

    <style name="ConfigTitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#b0b0b0</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:maxHeight">38dp</item>
        <item name="android:tag">@string/tag_theme_button</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="android:elevation" tools:ignore="NewApi">1dp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="ButtonStyle.KeyMap">
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
